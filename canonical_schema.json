      "request": {
        "content_type": "",
        "schema": {},
        "required": []
      },
      "responses": {
        "200": {
          "description": "Task statistics",
          "content_type": "application/json"
        },
        "500": {
          "description": "Some server error",
          "content_type": ""
        }
      }
    },

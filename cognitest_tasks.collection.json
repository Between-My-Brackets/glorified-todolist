{
  "info": {
    "name": "Cognitest – Tasks API (Generated)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "task_id",
      "value": "replace-me-after-create"
    }
  ],
  "item": [
    {
      "name": "POST /tasks – create task (201)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": ["{{base_url}}"],
          "path": ["tasks"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"title\":\"Test Task\",\"description\":\"Generated by Cognitest\",\"status\":\"todo\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "  pm.expect([201]).to.include(pm.response.code);",
              "});",
              "",
              "if (pm.response.code === 201) {",
              "  const json = pm.response.json();",
              "  if (json && json._id) {",
              "    pm.collectionVariables.set(\"task_id\", json._id);",
              "  }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /tasks – list tasks (200)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": ["{{base_url}}"],
          "path": ["tasks"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.expect([200]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /tasks/{id} – get task (200)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}",
          "host": ["{{base_url}}"],
          "path": ["tasks", "{{task_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.expect([200]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "PATCH /tasks/{id} – update task (200)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}",
          "host": ["{{base_url}}"],
          "path": ["tasks", "{{task_id}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"status\":\"doing\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.expect([200]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "DELETE /tasks/{id} – delete task (200)",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/tasks/{{task_id}}",
          "host": ["{{base_url}}"],
          "path": ["tasks", "{{task_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.expect([200]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /tasks/{id} – not found (404)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/tasks/non-existent-id",
          "host": ["{{base_url}}"],
          "path": ["tasks", "non-existent-id"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 404\", function () {",
              "  pm.expect([404]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}